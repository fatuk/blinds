<!-- Article view -->
<main class="main-content" itemscope itemtype="http://schema.org/NewsArticle">
	<!-- Image gradient -->
	<div class="image-gradient">
		<div
		    class="image-gradient__image"
			style="background-image: url('{{article.slider_img }}')">
		</div>
		<img itemprop="image" src="{{article.slider_img}}">
	</div>
	<div 
		class="container container_tight" 
		style="opacity: 1">
		{{>breadcrumbs}}
		<div class="column-3 article__main">
			<!-- Article -->
			<article class="article">
				<!-- Header -->
				<header class="article__header">
					<!-- Rubric -->
					<div class="article__rubric"  itemprop="genre">
						{{article.rubric}}
					</div>
					<!-- Title -->
					<h1 class="article__title" itemprop="headline">
						{{article.title}}
					</h1>
					<!-- Label -->
					<div class="article__label">
						<div class="article__label-text">
							{{article.label}}
						</div>
					</div>
					<!-- Image -->
					<img class="article__img" src="{{article.main_img}}" alt="{{article.title}}">
					<!-- Socials -->
					{{!-- <div class="share-socials"  ng-if="!article.isMainArticle">
						<!-- Text -->
						<div class="share-socials__text">
							Поделиться <span class="hide-in-portrait">статьей в соцсетях</span>
						</div>
						<ul class="share-socials__list">
							<li class="share-socials__item" ng-repeat="share in socials">
								<a href="{{share.url}}" target="_blank" class="share-socials__link">
									<svg class="icon icon-{{share.name}}"><use xlink:href="{{share.icon}}"></use></svg>
								</a>
							</li>
						</ul>
					</div>
					<!-- Date -->
					<div class="article__date hide-in-portrait" ng-if="!article.isMainArticle">
						{{article.date}}
					</div> --}}
				</header>
				<div class="article__content" itemprop="description">
					{{{article.text}}}
				</div>
			</article>

			<!-- Reviews -->
			{{!-- <reviews owner='{"id":"{{article.id}}","type":"article"}' style="opacity: {{$parent.showLoader?'0':'1'}};" ng-if="!!article.id && !!article.isReviewEnabled && !mobile"></reviews> --}}
			{{!-- {{>reviews}} --}}
		</div>
		<div class="column-1 article__aside">
			<!-- Article set -->
			<div class="article-set">
				<header class="article-set__header">
					<!-- Title -->
					<h2 class="article-set__title">
						{{article.aside_title}}
					</h2>
					<ul class="article-set__list">
						{{#each article.aside_links}}
						<li class="article-set_item">
							<a href="{{this.url}}" class="article-set__link">
								<span class="article-set__link-text">
									{{this.title}}
								</span>
								<svg class="icon icon-shevron-right"><use xlink:href="icons/icons.svg#shevron-right"></use></svg>
							</a>
						</li>
						{{/each}}
					</ul>
				</header>
			</div>
			<!-- Products set -->
			<div class="products-set">
				<h2 class="products-set__title">
					Товары по теме
				</h2>
				<ul class="products-set__list">
					<li class="products-set__item">
						{{>single-product}}
					</li>
				</ul>
			</div>
		</div>
	</div>
    <div class="container container_tight"  ng-if="!!article.id && !!article.isReviewEnabled && !!mobile" style="opacity: 1">
        <div class="column-3 article__reviews">
            <!-- Reviews -->
            {{!-- <reviews owner='{"id":"{{article.id}}","type":"article"}'></reviews> --}}
        </div>
    </div>
</main>
